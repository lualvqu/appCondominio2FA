<body>
  <div class="cont">
    <div class="demo">
      <div class="login">
        <!--div class="login__check"></div-->
        <div class="login__img">
          <img class="whiteImage" src="http://www.legadmi.com/assets/img/icon-edifice.png">
        </div>
        <div class="login__form">
          <div class="login__row">
            <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
              <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
            </svg>
            <input type="text" class="login__input name" placeholder="Usuário" />
          </div>
          <div class="login__row">
            <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
              <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
            </svg>
            <input type="password" class="login__input pass" placeholder="Senha" />
          </div>
          <button type="button" class="login__submit">Entrar</button>
          <p class="login__signup">Ainda não possui uma conta? &nbsp;
            <a>Cadastre-se</a>
          </p>
        </div>
      </div>

      <div class="app">
        <div class="app__top">
          <div class="app__menu-btn hide">
            <span></span>
          </div>
          <svg class="app__icon search svg-icon hide" viewBox="0 0 20 20">
            <!-- yeap, its purely hardcoded numbers straight from the head :D (same for svg above) -->
            <path d="M20,20 15.36,15.36 a9,9 0 0,1 -12.72,-12.72 a 9,9 0 0,1 12.72,12.72" />
          </svg>
          <p class="app__hello">Bem Vindo!</p>
          <div class="app__user">
            <img src="https://br.qr-code-generator.com/phpqrcode/getCode.php?cht=qr&chl=154456&chs=180x180&choe=UTF-8&chld=L|0" alt="" class="app__user-photo" />
          </div>
          <div class="app__month">
            <span class="app__month-btn left hide"></span>
            <p class="app__month-name"><%= getMonth() %></p>
            <span class="app__month-btn right hide"></span>
          </div>
        </div>
        <div class="app__bot">
          <div class="app__days">
            <div class="app__day weekday"><%= getDayWeek(-3) %></div>
            <div class="app__day weekday"><%= getDayWeek(-2) %></div>
            <div class="app__day weekday"><%= getDayWeek(-1) %></div>
            <div class="app__day weekday"><%= getDayWeek() %></div>
            <div class="app__day weekday"><%= getDayWeek(1) %></div>
            <div class="app__day weekday"><%= getDayWeek(2) %></div>
            <div class="app__day weekday"><%= getDayWeek(3) %></div>
            <div class="app__day date"><%= getDate(-3) %></div>
            <div class="app__day date"><%= getDate(-2) %></div>
            <div class="app__day date"><%= getDate(-1) %></div>
            <div class="app__day date"><u><%= getDate() %></u></div>
            <div class="app__day date"><%= getDate(1) %></div>
            <div class="app__day date"><%= getDate(2) %></div>
            <div class="app__day date"><%= getDate(3) %></div>
          </div>
          <div class="app__meetings">

            <%  historico.forEach( dado => { %>
            
            <div class="app__meeting">
              <img src="<%- dado.img %>" alt="" class="app__meeting-photo" />
              <p class="app__meeting-name"><%- dado.status %></p>
              <p class="app__meeting-info">
                <span class="app__meeting-time"><%- dado.hora %> - </span>
                <span class="app__meeting-place"><%- dado.data %></span>
              </p>
            </div>

            <% }); %>

