<!DOCTYPE html>
<html lang="pt-br">
    <head>       
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> Home Visitantes </title>
        
        <!-- ==========  CSS Bootstrap Import Zone ========== -->
        <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
        <!-- ========== CSS Personlizado Import Zone ========== -->
        <link rel="stylesheet" href="/stylesheets/styleApp.css">  
    </head>
    <body>
        <!-- Content Here -->

        <h1 class="m-3">Visitantes</h1>
        
        <hr/>
        <a class="btn btn-primary mx-3" href="/visitantes/novo"><b>+</b></a><label>Cadastrar novo visitante</label>
        <br/>

        <hr/>

        <div class="m-5">
            <table class="table table-bordered table-hover vertical-center-items">
                <caption>Lista de visitantes</caption>
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">#</th>
                        <th>Nome</th>
                        <th>RG</th>
                        <th>Celular</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <%  visitantes.forEach( (visitante, iterator) => { %>
                        <tr>
                            <td class="text-center"><%= iterator + 1 %></td>
                            <td><%= visitante.nome %></td>
                            <td><%= visitante.rg %></td>
                            <td><%= visitante.celular %></td>
                            <td class="text-center">
                                <a class="btn btn-warning mx-1" onclick="editar('<%= visitante._id %>')">Editar</a>
                                <button class="btn btn-danger mx-1" onclick="excluir('<%= visitante._id %>')">Excluir</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
        <a class="btn btn-secondary mx-3" href="/">Voltar para Home</a>
        
        <div id="editar-visitante-modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Editar dados do visitante</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="editar-visitante-form" method="POST" action="">
                        
                            <div class="form-group">
                                <label for="nome">Nome:</label>
                                <input name="nome" type="text" class="form-control" />
                            </div>
                            
                            <div class="form-group">
                                <label>RG:</label>
                                <input name="rg" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>CPF:</label>
                                <input name="cpf" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Telefone Fixo:</label>
                                <input name="telefoneFixo" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Celular:</label>
                                <input name="celular" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <input name="email" type="email" class="form-control" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button id="btn-salvar" type="button" class="btn btn-primary" onclick="submitForm()">Salvar alterações</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- ========== JS JQuery Import Zone ========== -->
        <script src="/javascripts/jquery-3.3.1.min.js"></script>
        <!-- ========== JS Bootstrap Import Zone ========== -->
        <script src="/javascripts/bootstrap.min.js"></script>
        <script src="/javascripts/bootstrap.bundle.min.js"></script>
   

        <script type="text/javascript">
        
            function excluir(id){
                console.log("chamou a funcao com o parametro \n", id);
                $.ajax({
                    url: 'visitantes/remover',
                    type: "DELETE",
                    data: {id:id},
                    success: function (){
                        window.location.reload();
                    }
                });
            }

            function editar(id){
                $.ajax({
                    url: 'visitantes/visitante/informacoes',
                    type: "GET",
                    data: {id:id},
                    success: function (data){
                        $('#editar-visitante-form').attr('action', 'visitantes/editar/' + data._id)
                        $('input[name=nome]').val(data.nome);
                        $('input[name=rg]').val(data.rg);
                        $('input[name=cpf]').val(data.cpf);
                        $('input[name=telefoneFixo]').val(data.telefoneFixo);
                        $('input[name=celular]').val(data.celular);
                        $('input[name=email]').val(data.email);
                        $('#editar-visitante-modal').modal();
                    }
                });
            }

            function submitForm() {
                $('#editar-visitante-form').submit();
            }
        </script>

    </body>
</html>